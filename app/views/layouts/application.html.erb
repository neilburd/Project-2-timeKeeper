<!DOCTYPE html>
<html>
  <head>
    <title>Timekeeper</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">
  </head>

  <body>
    <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper container">
        <a class="brand-logo" href="/">TimeKeeper</a>
        <% if user_signed_in? %>
        <ul class="right">

          <li><%= link_to 'Logout', destroy_user_session_path, method: "delete", class: "waves-effect waves-light btn right  white-text", id: "nav-mobile" %></li>
        <% else %>

        <% end %>

      </ul>

      </div>
    </nav>
    </div>
    <div class= "container row">
      <% if notice %>
        <p class="alert alert-success center col s12"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger center col s12"><%= alert %></p>
      <% end %>

      <li><%= link_to "Add New Job", new_job_path(@job), class:"waves-effect waves-light btn white-text col s12" %></li>
    </div>
    <div class="container">
      <%= yield %>
    </div>

    <footer class=" page-footer">
      <div class="container center">
        <p>TimeKeeper 2017</p>
      </div>
    </footer>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
  </body>
</html>
