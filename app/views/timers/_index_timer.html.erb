<div class=" table-nested">
<!-- <p id="notice"><%#= notice %></p> -->
<%# @jobs.each do |job| %>

<table class="card row striped center">
  <thead>
    <tr>
      <th>Hours</th>
      <th>Minutes</th>
      <th>Description</th>
      <th>Job</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>

      <% timers.each do |timer| %>
      <tr>
        <td class=""><%= timer.hours %></td>
        <td class=""><%= timer.minutes %></td>
        <td class=""><%= timer.description %></td>
        <td class=""><%= timer.job.title %></td>
        <!-- <td><%#= link_to 'Show', [timer.job, timer] %></td> -->
        <td><%= link_to 'Edit', edit_job_timer_path(timer.job, timer), class:"btn" %></td>
        <td><%= link_to 'Delete', [timer.job, timer], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn " %></td>

      </tr>
    <% end %>

  </tbody>
</table>
<%# end %>
</div>

