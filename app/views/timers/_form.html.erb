<div class="card">
<%= form_for([@timers.job, @timers]) do |f| %>
  <% if @timers.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@timers.errors.count, "error") %> prohibited this timer from being saved:</h2>

      <ul>
      <% @timers.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="card-content">
<div class="row">
  <div class="col s1">
    <%= f.label :hours %>
    <%= f.number_field :hours %>
  </div>
  <div class="col s1">
    <%= f.label :minutes %>
    <%= f.number_field :minutes %>
  </div>
  <div class="col s10">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
</div>

  <div class="field"> <!-- this needs to add the proper job_id -->
    <%= f.hidden_field :job_id, value: @timers.job_id %>
  </div>

  <div class="actions center row">
    <%= f.submit class:"btn btn-primary center col s12 green lighten-4 green-text text-darken-4" %>
  </div>
<% end %>
</div>
</div>
