<div class="container">
  <div class="card row">
    <h3 class= "center">Add Time</h3>
    <div class="container-content col s12">

      <div class="stopwatch">
        <h1 id="timer_text">00:00:00</h1>
        <!-- <span id="hours">00</span>:<span id="minutes">00</span>:<span id="seconds">00</span> -->
        <button id="start" onclick="timer()">start</button>
        <button id="stop">stop</button>
        <button id="clear">clear</button>
      </div>
      <%= render 'form', timer: @timer %>

      <div class=" container-content col s12 margin-bottom">
        <%= link_to 'Show All Jobs', jobs_path, class:"btn col s12 white-text" %>

      </div>

    </div>
  </div>
</div>
